<!--index.wxml-->
<view class="container">
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>
  <view class="papercontainer">
    <image class="paperimg" mode="aspectFit" src="https://res.wx.qq.com/wxdoc/dist/assets/img/0.4cb08bb4.jpg"></image>
  </view>
  <view class="usermotto">
    <text>你愿意花</text>
    <text class="motto">{{money}}元钱</text>
    <text>打开它么？</text>
  </view>
  <view class="actioncontainer">
    <button bindtap="chooseGratuity" style="width: 80%" type="primary" class="button" disabled="{{actionDisable}}">打  开  它</button>
    <button bindtap="" style="width: 80%" type="primary" class="button" disabled="{{actionDisable}}">不  打  开</button>
  </view>
  <mp-actionSheet bindactiontap="selectGratuityDialog" show="{{showGratuityDialog}}" actions="{{gratuityGroups}}" title="你愿意支付多少钱消费？">
  </mp-actionSheet>
</view>
