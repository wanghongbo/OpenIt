/* pages/login/login.wxss */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.inputcontainer{
  display: flex;
  width: 80%;
  height: 80rpx;
  margin: 100rpx 0;
  padding: 10rpx 0;
  border-width: 1rpx 0;
  border-style: solid;
  border-color: lightgray;
}

.tip {
  display: block;
  width: 80rpx;
  line-height: 80rpx;
}

.input {
  display: inline-block;
  width: 100% - 80rpx;
  height: 80rpx;
}